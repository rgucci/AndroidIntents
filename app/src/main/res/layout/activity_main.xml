<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/btn_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmail"
            app:layout_constraintTop_toBottomOf="@+id/btnBrowser"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/btn_dialer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDialer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBrowser" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/btn_browser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBrowser"
            app:layout_constraintTop_toBottomOf="@+id/btnDialer"
            app:layout_constraintBottom_toTopOf="@+id/btnEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>